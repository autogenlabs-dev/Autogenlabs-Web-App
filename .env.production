# Production Environment Variables
# These override the values in .env for production deployment

# Backend API URL
NEXT_PUBLIC_API_URL=https://api.codemurf.com

# Frontend URL
NEXT_PUBLIC_FRONTEND_URL=https://codemurf.com
NEXT_PUBLIC_APP_URL=https://codemurf.com

# Token storage keys
NEXT_PUBLIC_ACCESS_TOKEN_KEY=access_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=refresh_token

# Node environment
NODE_ENV=production

# Clerk Configuration (Production)
# Note: Actual keys should be set in Vercel, not in git
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Force Clerk to use default domain (not custom subdomain)
CLERK_FRONTEND_API=clerk.accounts.dev
NEXT_PUBLIC_CLERK_FRONTEND_API=clerk.accounts.dev

# Production OAuth Configuration
# Google OAuth Console must have these redirect URIs:
# - https://api.codemurf.com/auth/google/callback (backend uses /auth not /api/auth)
# - https://codemurf.com/auth/callback
GOOGLE_OAUTH_REDIRECT_URI=https://api.codemurf.com/auth/google/callback
FRONTEND_CALLBACK_URL=https://codemurf.com/auth/callback

# CORS Configuration
BACKEND_CORS_ORIGINS=["https://codemurf.com", "https://www.codemurf.com"]

# Security Headers
SECURE_COOKIES=true
COOKIE_DOMAIN=.codemurf.com